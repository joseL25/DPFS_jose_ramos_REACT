<!DOCTYPE html>  
<html lang="es">  
    <%- include('../partials/head.ejs',{style:"login"}) %>
<body>  
    
    <div class="container">  
        <div class="form-container">  

            <div class="avatar-profile">
                <div class="avatar-image">
                    <img src="/images/avatar/default-user.png" alt="default">
                </div>
            </div>

            <!-- <h1>Bienvenido</h1>   -->
            <p>Ingrese sus datos para usar las funciones del sitio</p>  
            <ul class="errors"></ul>
            <form action="/users/login" method="post" novalidate id="login-form">  
                <div class="input-email">
                    <label for="email">Correo</label>  
                    <input 
                    type="email" 
                    name="email" 
                    id="email" 
                    placeholder="Ingrese su correo"
                    value="<%= locals.old?.email ? old.email : "" %>" required autocomplete="off">
                    <!-- <div class="error" id="errorEmail"></div> -->

                    <% if (locals.errors?.email) { %>
                     <p class="error"><%= locals.errors.email.msg %></p>
                    <% } %> 
                </div>
                
                <div class="input-password">
                    <label for="password">Contrase침a</label>  
                    <input type="password" 
                    name="password" 
                    id="password" 
                    placeholder="Ingrese su contrase침a"
                    value="<%= locals.old?.password ? old.password : "" %>" required autocomplete="off">
                    <!-- <div class="error" id="errorPassword"></div> -->
                    <!-- <span id="show-hide">show/Hide</span> -->

                    <% if (locals.errors?.password) { %>
                        <p class="error"><%= locals.errors.password.msg %></p>
                    <% } %> 
                </div>
                
                <div class="input-check">
                    <label for="rememberme">Recordarme</label>
                    <input type="checkbox" name="rememberme" id="rememberme" required autocomplete="off">
                    <div class="error" id="errorRememberme"></div>
                </div>

                <button type="submit" class="login-button">Iniciar Sesi칩n</button>  
            </form>  
            <!-- <a href="/users/register">Registrarse</a> -->
            <div class="options">
                <div class="login">
                    <a href="/users/register">Registrarse</a> 
                </div>
                <div>
                    <a href="#">Olvidaste tu contrase침a?</a>
                </div>
            </div>
        </div>  
    </div>  
    <!-- Script JS -->
    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <script src="/js/validaciones/login.js"></script>
</body>  
</html>